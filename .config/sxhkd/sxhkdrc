#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + d
	rofi -show drun
#	dmenu_run -b -fn "Jetbrain Mono:size=12" -nb "#3c3836" -nf "#d4be98" -sb "#282828" -sf "#8ec07c"

# power menu
super + p
	$HOME/.config/rofi/powermenu/powermenu.sh

# file manager
super + n
	nautilus -w

# web browser
super + w
	firefox

# screenshot
Print
	flameshot full -p ~/Pictures/Screenshots

shift + Print
	flameshot gui -p ~/Pictures/Screenshots


# volume control
XF86AudioLowerVolume
	pamixer -ud 5
XF86AudioRaiseVolume
	pamixer -ui 5
XF86AudioMute
    pamixer -t


# Brightness control
XF86MonBrightnessUp
	brightnessctl -c backlight set +5%
XF86MonBrightnessDown
	brightnessctl -c backlight set 5%-

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd




# # # # # # # # #
# bspwm hotkeys #
# # # # # # # # #


# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# state/flags


# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
#alt + {_,shift + }c
#	bspc node -f {next,prev}.local.!hidden.window

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus or send the given desktop with numpad keys
super + {_,shift + }{KP_End,KP_Down,KP_Next,KP_Left,KP_Begin,KP_Right,KP_Home,KP_Up,KP_Prior,KP_Insert}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
